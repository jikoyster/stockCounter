<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/transactions_new_layout">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="ENTER PRODUCT CODE"
            android:nextFocusDown="@+id/trans_quantity"
            android:inputType="text"
            android:maxLines="1"
            android:id="@+id/trans_PCode"/>
    </TableRow>



    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:minWidth="60dp"
                android:text="TYPE"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/trans_type_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/IN"
                    android:text="IN"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/OUT"
                    android:text="OUT" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/curBal"
                android:text="BALANCE"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textSize="20dp"
                android:id="@+id/trans_curBal"/>
        </TableRow>
    </TableLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="20dp"
        android:id="@+id/trans_quantity"
        android:hint="QUANTITY"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextClock
            android:textSize="18dp"
            android:format12Hour="MMM.dd.yyyy hh:mm a"
            android:background="#666666"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:id="@+id/trans_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/btn_trans_submit"
        android:text="SUBMIT"/>

    <!--<Button-->
        <!--android:text="Show Notification"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:id="@+id/btnNotification"-->
        <!--android:onClick="showNotification"/>-->

</LinearLayout>